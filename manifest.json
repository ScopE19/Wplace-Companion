{
    "manifest_version": 3,
    "name": "WPlace Pixel Notifier",
    "version": "1.0",
    "description": "Notifies when your pixel count is full.",
    "permissions": [
      "storage",
      "alarms"
    ],
    "host_permissions": [
      "https://backend.wplace.live/*",
      "https://*.netlify.app/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "/icon.png"
      }
    }
  }
  